<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_collection_avtivity"
        tools:context=".CollectionActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dateText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customerText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateText"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"

            android:textSize="24sp" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/amountEdit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerText"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:hint="Ποσό"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/acceptButton3"
            android:background="@drawable/checkmark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountEdit"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp" tools:layout_editor_absoluteY="256dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/cancelButton3"
            android:background="@drawable/cancel"
            app:layout_constraintTop_toBottomOf="@+id/amountEdit"
            android:layout_marginTop="40dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="80dp" tools:layout_editor_absoluteY="256dp"/>

</android.support.constraint.ConstraintLayout>