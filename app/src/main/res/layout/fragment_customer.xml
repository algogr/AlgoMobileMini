<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">


<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textCapCharacters"

                    android:ems="10"
                    android:id="@+id/editName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/editTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="64dp"
                    android:hint="Επωνυμία"
                    />

            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textCapCharacters"
                    android:ems="10"
                    android:id="@+id/editTitle"
                    app:layout_constraintTop_toBottomOf="@id/editName"
                    app:layout_constraintBottom_toTopOf="@id/switchVat"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Τίτλος"

            />
            <Switch
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:id="@+id/switchVat"
                    app:layout_constraintTop_toBottomOf="@id/editTitle"
                    app:layout_constraintBottom_toTopOf="@id/editAddress"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="ΦΠΑ Νησιών"
            />


            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textCapCharacters"
                    android:ems="10"
                    android:id="@+id/editAddress"
                    app:layout_constraintTop_toBottomOf="@id/switchVat"
                    app:layout_constraintBottom_toTopOf="@id/editDistrict"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Διεύθυνση"/>

            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textCapCharacters"
                    android:ems="10"
                    android:id="@+id/editDistrict"
                    app:layout_constraintTop_toBottomOf="@id/editAddress"
                    app:layout_constraintBottom_toTopOf="@id/editCity"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Περιοχή"/>

            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textCapCharacters"
                    android:ems="10"
                    android:id="@+id/editCity"
                    app:layout_constraintTop_toBottomOf="@id/editDistrict"
                    app:layout_constraintBottom_toTopOf="@id/editAFM"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Πόλη"/>

            />
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editAFM"
                    app:layout_constraintTop_toBottomOf="@id/editCity"
                    app:layout_constraintBottom_toTopOf="@id/editOccupation"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:hint="ΑΦΜ"
            />


            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textCapCharacters"
                    android:ems="10"
                    android:id="@+id/editOccupation"
                    app:layout_constraintTop_toBottomOf="@id/editAFM"
                    app:layout_constraintBottom_toTopOf="@id/buttonDOY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Επάγγελμα"/>

            <Button
                    android:layout_width="200dp"
                    android:layout_height="80dp" android:id="@+id/buttonDOY"
                    app:layout_constraintTop_toBottomOf="@id/editOccupation"
                    app:layout_constraintBottom_toTopOf="@id/editPhone1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:text="ΔΟΥ"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>


            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/editPhone1"
                    app:layout_constraintTop_toBottomOf="@id/buttonDOY"
                    app:layout_constraintBottom_toTopOf="@id/editPhone2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Τηλέφωνο 1"/>


            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:id="@+id/editPhone2" android:inputType="phone"
                    app:layout_constraintTop_toBottomOf="@id/editPhone1"
                    app:layout_constraintBottom_toTopOf="@id/editFax"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Τηλέφωνο 2"
            />

            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:id="@+id/editFax" android:inputType="phone"
                    app:layout_constraintTop_toBottomOf="@id/editPhone2"
                    app:layout_constraintBottom_toTopOf="@id/editEmail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Fax"
            />



            <EditText
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editEmail"
                    app:layout_constraintTop_toBottomOf="@id/editFax"
                    app:layout_constraintBottom_toTopOf="@id/editComments"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Email"
                    />



            <EditText
                    android:layout_width="200dp"
                    android:layout_height="105dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/editComments"
                    app:layout_constraintTop_toBottomOf="@id/editEmail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="5dp"
                    android:hint="Σχόλια"

            />

            <Button
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:id="@+id/acceptButton3" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editComments"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cancelButton3"
                    android:background="@drawable/checkmark"/>
            <Button
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:id="@+id/cancelButton3" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editComments"
                    app:layout_constraintLeft_toRightOf="@id/acceptButton3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/cancel"/>


        </android.support.constraint.ConstraintLayout>


</ScrollView>