<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="gr.algo.algomobilemini">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".CustomerActivity"
                android:label="@string/title_activity_new_customer"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".UploadDB"
                android:label="@string/title_activity_upload_db"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".Settings"
                android:label="@string/title_activity_settings"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".InvoiceHeaderActivity"
                android:label="@string/title_activity_invoice_header"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".InvoiceActivity"
                android:label="@string/title_activity_invoice"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".CustomerListActivity">
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".RouteActivity">
        </activity>
    </application>

</manifest>